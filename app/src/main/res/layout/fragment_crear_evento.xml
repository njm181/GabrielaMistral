<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.evento.CrearEventoFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardviewEventoDetalle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        app:cardBackgroundColor="@color/colorBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/crear_evento"
                        android:textColor="@color/primaryTextColor"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/outlinedAutoTextField"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/evento_autor"
                        android:textColorHint="@color/primaryTextColor"
                        app:boxCornerRadiusBottomEnd="18dp"
                        app:boxCornerRadiusBottomStart="18dp"
                        app:boxCornerRadiusTopEnd="18dp"
                        app:boxCornerRadiusTopStart="18dp"
                        app:endIconMode="clear_text"
                        app:errorContentDescription="@string/campo_vacio"
                        app:errorEnabled="true"
                        app:helperText="@string/campo_requerido"
                        app:startIconDrawable="@drawable/ic_person_white">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tvInputUsernameEvento"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName|textCapWords"
                            android:maxLength="30"
                            android:textColor="@color/primaryTextColor" />

                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/outlinedTituloEventoTextField"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/evento_titulo"
                        android:textColorHint="@color/primaryTextColor"
                        app:boxCornerRadiusBottomEnd="18dp"
                        app:boxCornerRadiusBottomStart="18dp"
                        app:boxCornerRadiusTopEnd="18dp"
                        app:boxCornerRadiusTopStart="18dp"
                        app:endIconMode="clear_text"
                        app:errorContentDescription="@string/campo_vacio"
                        app:errorEnabled="true"
                        app:helperText="@string/campo_requerido"
                        app:startIconDrawable="@drawable/ic_title_white">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tvInputTituloEvento"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName|textCapWords"
                            android:maxLength="30"
                            android:textColor="@color/primaryTextColor" />

                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="4dp"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinnerSeccion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/outlinedDetalleEventoTextField"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/evento_detalle"
                        android:textColorHint="@color/primaryTextColor"
                        app:boxCornerRadiusBottomEnd="18dp"
                        app:boxCornerRadiusBottomStart="18dp"
                        app:boxCornerRadiusTopEnd="18dp"
                        app:boxCornerRadiusTopStart="18dp"
                        app:endIconMode="clear_text"
                        app:errorContentDescription="@string/campo_vacio"
                        app:errorEnabled="true"
                        app:helperText="@string/campo_requerido"
                        app:startIconDrawable="@drawable/ic_text_fields_white">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tvInputDetalleEvento"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine|textCapWords"
                            android:maxLength="150"
                            android:textColor="@color/primaryTextColor" />

                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/outlinedFechaHoraEventoTextField"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/evento_fecha_hora"
                        android:textColorHint="@color/primaryTextColor"
                        app:boxCornerRadiusBottomEnd="18dp"
                        app:boxCornerRadiusBottomStart="18dp"
                        app:boxCornerRadiusTopEnd="18dp"
                        app:boxCornerRadiusTopStart="18dp"
                        app:endIconMode="clear_text"
                        app:errorContentDescription="@string/campo_vacio"
                        app:errorEnabled="true"
                        app:helperText="@string/campo_requerido"
                        app:startIconDrawable="@drawable/ic_date_range_white">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tvInputFechaHoraEvento"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="time"
                            android:textColor="@color/primaryTextColor" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/outlinedLocalidadBarrioEventoTextField"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/evento_localidad_barrio"
                        android:textColorHint="@color/primaryTextColor"
                        app:boxCornerRadiusBottomEnd="18dp"
                        app:boxCornerRadiusBottomStart="18dp"
                        app:boxCornerRadiusTopEnd="18dp"
                        app:boxCornerRadiusTopStart="18dp"
                        app:endIconMode="clear_text"
                        app:errorContentDescription="@string/campo_vacio"
                        app:errorEnabled="true"
                        app:helperText="@string/campo_requerido"
                        app:startIconDrawable="@drawable/ic_place_white">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tvInputLocalidadBarrioEvento"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="datetime|date"
                            android:maxLength="150"
                            android:textColor="@color/primaryTextColor" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:layout_weight="0.33"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/outlinedCalleEventoTextField"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/evento_calle"
                            android:textColorHint="@color/primaryTextColor"
                            app:boxCornerRadiusBottomEnd="18dp"
                            app:boxCornerRadiusBottomStart="18dp"
                            app:boxCornerRadiusTopEnd="18dp"
                            app:boxCornerRadiusTopStart="18dp"
                            app:endIconMode="clear_text"
                            app:errorContentDescription="@string/campo_vacio"
                            app:errorEnabled="true"
                            app:helperText="@string/campo_requerido"
                            app:startIconDrawable="@drawable/ic_my_location_white">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/tvInputCalleEvento"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text|textCapWords"
                                android:maxLength="15"
                                android:textColor="@color/primaryTextColor" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="0.33"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/outlinedAlturaEventoTextField"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/evento_altura"
                            android:textColorHint="@color/primaryTextColor"
                            app:boxCornerRadiusBottomEnd="18dp"
                            app:boxCornerRadiusBottomStart="18dp"
                            app:boxCornerRadiusTopEnd="18dp"
                            app:boxCornerRadiusTopStart="18dp"
                            app:endIconMode="clear_text"
                            app:errorContentDescription="@string/campo_vacio"
                            app:errorEnabled="true"
                            app:helperText="@string/campo_requerido"
                            app:startIconDrawable="@drawable/ic_my_location_white">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/tvInputAlturaEvento"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:maxLength="4"
                                android:textColor="@color/primaryTextColor" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCrearEvento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    android:text="@string/crear"
                    android:textColor="@color/primaryTextColor"
                    app:cornerRadius="4dp"
                    app:rippleColor="@color/colorSecundary" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>


</FrameLayout>