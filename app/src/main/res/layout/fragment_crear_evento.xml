<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.evento.CrearEventoFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardviewEventoDetalle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        app:cardBackgroundColor="@color/colorBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">
                <MultiAutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/crear_evento"
                    android:gravity="center"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/outlinedAutoTextField"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/evento_autor"
                    app:helperText="@string/campo_requerido"
                    app:errorEnabled="true"
                    app:errorContentDescription="@string/campo_vacio"
                    app:endIconMode="clear_text"
                    app:boxCornerRadiusBottomEnd="18dp"
                    app:boxCornerRadiusBottomStart="18dp"
                    app:boxCornerRadiusTopEnd="18dp"
                    app:boxCornerRadiusTopStart="18dp"
                    app:startIconDrawable="@drawable/ic_person_white">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tvInputUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName|textCapWords"
                        android:maxLength="30"
                        android:textColor="@color/primaryTextColor" />

                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/outlinedTituloEventoTextField"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/evento_titulo"
                app:helperText="@string/campo_requerido"
                app:errorEnabled="true"
                app:errorContentDescription="@string/campo_vacio"
                app:endIconMode="clear_text"
                app:boxCornerRadiusBottomEnd="18dp"
                app:boxCornerRadiusBottomStart="18dp"
                app:boxCornerRadiusTopEnd="18dp"
                app:boxCornerRadiusTopStart="18dp"
                app:startIconDrawable="@drawable/ic_title_white">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tvInputTituloEvento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName|textCapWords"
                    android:maxLength="30"
                    android:textColor="@color/primaryTextColor" />

            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/outlinedSeccionEventoTextField"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/evento_seccion"
                    app:helperText="@string/campo_requerido"
                    app:errorEnabled="true"
                    app:errorContentDescription="@string/campo_vacio"
                    app:endIconMode="clear_text"
                    app:boxCornerRadiusBottomEnd="18dp"
                    app:boxCornerRadiusBottomStart="18dp"
                    app:boxCornerRadiusTopEnd="18dp"
                    app:boxCornerRadiusTopStart="18dp"
                    app:startIconDrawable="@drawable/ic_group_white">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tvInputSeccionEvento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName|textCapWords"
                        android:maxLength="15"
                        android:textColor="@color/primaryTextColor" />

                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>mn,b





        </LinearLayout>




    </com.google.android.material.card.MaterialCardView>


</FrameLayout>